/* 错误提示样式 */
QTextEdit {
    border: 1px solid #ddd;
    border-radius: 4px;
    background: #f9f9f9;
}

QTextEdit:hover {
    border-color: #999;
}

QPushButton {
    padding: 6px 12px;
    background: #4CAF50;
    color: white;
    border: none;
    border-radius: 3px;
    margin-right: 8px;
}

QPushButton:hover {
    background: #45a049;
}

QMessageBox {
    font-family: 'Segoe UI';
    font-size: 14px;
}
